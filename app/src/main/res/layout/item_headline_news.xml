<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_headline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="3dp"
    android:layout_marginRight="8dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_newsHeadline"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/gettyimages"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/tvTitleHeadline"
            android:textSize="24sp"
            android:maxEms="13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginBottom="22dp"
            android:padding="@dimen/activity_vertical_margin"
            android:textColor="@android:color/white"
            tools:text="@string/example_title_headline" />

        <TextView
            android:id="@+id/tvAuthorHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:drawablePadding="4dp"
            android:layout_gravity="start|bottom"
            android:drawableStart="@drawable/ic_account_circle"
            tools:text="@string/example_author_headline" />


    </FrameLayout>

</android.support.v7.widget.CardView>