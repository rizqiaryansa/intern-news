<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_recent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_recentNews"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/gettyimages"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/tv_title_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:textSize="20sp"
            android:textColor="@color/color_title_recent"
            android:fontFamily="sans-serif"
            tools:text="Hacker who turned in Chelsea Meaning found dead 37"/>

        <TextView
            android:id="@+id/tv_author_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:drawableStart="@drawable/ic_account_circle"
            android:textColor="@color/color_title_recent"
            android:drawablePadding="4dp"
            android:textSize="16sp"
            tools:text="Mashable"/>

    </LinearLayout>

</android.support.v7.widget.CardView>